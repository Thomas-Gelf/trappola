#!/usr/bin/perl

use strict;
use warnings;

BEGIN {
  use Cwd qw( realpath );
  use File::Basename;
  use lib dirname(dirname(realpath(__FILE__))) . '/vendorlib';
  use lib dirname(dirname(realpath(__FILE__))) . '/lib';
}

use Trappola::Config;
my $config = Config('/etc/trappola/config.ini');

use Trappola::TrapDb;
use Trappola::QueueReader;
use Trappola::TrapHandler;

my $db = new Trappola::TrapDb;
my $queue = new Trappola::QueueReader('/root/STADT-DATA/var/spool/strap/oracle');
my $handler = new Trappola::TrapHandler($db, $queue);
$handler->dispatchLegacyLoop();

